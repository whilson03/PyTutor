<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="4dp"
    android:layout_marginTop="2dp"
    android:layout_marginRight="4dp"
    android:layout_marginBottom="2dp"
    android:foreground="?selectableItemBackground"
    app:cardElevation="4dp">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <ImageView
           android:layout_alignStart="@id/learn_topics_left_icon"
           android:id="@+id/learn_topics_left_icon"
           android:layout_width="30dp"
           android:padding="8dp"
           android:layout_alignParentStart="true"
           android:layout_centerVertical="true"
           android:layout_height="30dp"
           tools:src="@drawable/ic_menu_send"/>

       <TextView
           android:id="@+id/learn_topics_text_view"
           android:layout_width="wrap_content"
           android:layout_height="match_parent"
           android:layout_gravity="center_horizontal"
           android:gravity="center_vertical"
           android:layout_toEndOf="@id/learn_topics_left_icon"
           android:layout_centerVertical="true"
           android:fontFamily="serif"
           android:maxLines="1"
           android:padding="4dp"
           android:textAppearance="@style/TextAppearance.AppCompat.Medium"
           tools:text="Title"
           android:textSize="25sp"
           tools:textSize="30sp" />

   </RelativeLayout>
</android.support.v7.widget.CardView>